
<%= form_for(Request.find(@id), method: :post, url: confirm_request_path(@id), html: { :class => "form-horizontal"}, remote: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= f.submit "Confirm", class: "btn-sm mybtn btn-small btn-success", style: "display: inline-block;height: 24px;padding-bottom: 22px; border:none;cursor:pointer;" %>

  <% end %>