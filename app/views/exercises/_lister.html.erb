<% if current_user.rolable.exercises.count > 0 %>



 <!-- Exercises table -->
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>

    <th>Name</th>
	<th class="col-md-3 sortable">
		<span class="line"></span>Description
	</th>
	
</tr>
</thead>

<tbody>


<% @exercises.each do |exercise| %>

  <tr>

    <td>
    	<%= link_to exercise.name.capitalize, exercise, :class => "name" %>
    </td>

    

    <td> 

    	<p><%= exercise.description %></p>


    </td>

    

  </tr>

<% end %>

</table>


 

