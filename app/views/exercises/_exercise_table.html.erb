<% if @exercises.any? %>

  <!-- Exercises table -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th class="col-md-3 sortable">
          <span class="line">Description</span>
        </th>
      </tr>
    </thead>
    <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <%= link_to exercise.name.capitalize, exercise, :class => "name" %>
        </td>
        <td>
          <p><%= exercise.description %></p>
        </td>
      </tr>
    <% end %>
   </table>
   
<% else %>
 <p>no exercises here</p>
<% end %>