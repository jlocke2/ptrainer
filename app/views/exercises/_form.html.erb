<%= form_for(@exercise, html: { :class => "form-horizontal"}, remote: true) do |f| %>

  <div class="form-group">
    <%= f.label :name, :class => "control-label", :style => "width:100%; text-align:center;" %>
    <div class="col-md-8">
      <%= f.text_field :name, :class => "form-control", :placeholder => " ", 
                       :style => "border-color: #d0dde9; width:286px; text-align:center;" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => " control-label", :style => "width:100%; text-align:center;" %>
    <div class="col-md-8">
      <%= f.text_field :description, :class => "form-control", :placeholder => " ", :style => "border-color: #d0dde9;width:286px; text-align:center;" %>
    </div>
  </div>

  <div class="form-group">
    <div style="width:100%; text-align:center;">
      <%= f.submit "Create My Exercise", class: "btn mybtn btn-large btn-primary" %>
    </div>
  </div>

<% end %>         
            






