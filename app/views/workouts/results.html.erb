
        <div id="pad-wrapper" class="users-list">
            <div class="row header">
                <h3>Results for <%= @client.name %> on <%= @appointment.start_at.strftime("%D   %I:%M%P") %></h3><br><br>
                <p><%= link_to "Return To Workout", workout_path(@workout) %></p>
                <p><%= link_to "Return To Client Profile", client_path(@client) %></p>
              </div>
            </div>
                


<% if @exercises.any? %>

<% @exercises.each do |exercise| %>
<%  @rotations = exercise.rotations %>
 <!-- Users table -->
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
        	<h3><%= exercise.exercise.name.capitalize %></h3>
            <thead>
                <tr>

  <th class="col-md-2">
    <span class="line"></span>Set #
  </th>
  <th class="col-md-3">
    <span class="line"></span>Goal
  </th>
  
  <th class="col-md-3">
    <span class="line"></span>Amount Done
  </th>
  
</tr>
</thead>
<% @rotations.each_with_index do |rotation, index| %>




  <tr>

    <td>
      <%= index+1 %>
    </td>


    <td> 
         <%= rotation.amount %> <%= rotation.unit %> <% if rotation.exwt.present? %>
      with <%= rotation.exwt %> Pounds
      <% end %>
    </td>


    <td>
      <%= rotation.amountdone %> <%= rotation.unit %> <% if rotation.weightdone.present? %>
      <%= rotation.weightdone %> Pounds
      <% end %>
    </td>

  </tr>
</tbody>
<% end %>

</table>
 
<% end %>
<br>
<% else %>

<p>no results yet</p>

<% end %>
</div>
 







