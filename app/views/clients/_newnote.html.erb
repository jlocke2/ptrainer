<%= form_for(Note.new,method: :post, url: notes_path, html: { :class => "form-horizontal" }, remote: true) do |f| %>

                        <div class="form-group">

                          <div><%= hidden_field_tag 'client', @client.id %></div>
                              
                              <div class="col-md-12">
                              <%= f.text_area :description, :class => "form-control", :placeholder => "Add Your Note...", :style => "height:140px;" %>
                            </div>
                        </div>

                       
                        <div class="form-group">
                            <div class="col-md-12 submit-box pull-right">
                              <%= f.submit "Add Note", class: "btn mybtn btn-large btn-primary", style: "margin-right: 16px;" %>
                            </div>
                        </div>
                              <% end %>





                             