
        <div id="pad-wrapper" class="users-list">
            <div class="row header">
                <h3>Appointments for <%= @client.name %></h3><br><br>
                <p><%= link_to "Return To Client Profile", client_path(@client) %></p>
              </div>
            </div>
                


<% if current_user.clients.count > 0 %>



 <!-- Users table -->
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>

  <th class="col-md-2">
    <span class="line"></span>Starts At
  </th>
  <th class="col-md-2">
    <span class="line"></span>Workout
  </th>
  
  <th class="col-md-3">
    <span class="line"></span>Results
  </th>
  <th class="col-md-3">
    <span class="line"></span>Remove
  </th>
</tr>
</thead>
<% @appointments.each do |appointment| %>




  <tr>

    <td>
      <%= appointment.start_at.strftime("%D   %I:%M%P") %>
    </td>


    <td> 
         

        <% if appointment.workout.present? %>
          <% if appointment.start_at > Time.now %>

               <%= link_to 'View Upcoming Workout', workout_path(appointment.workout.id) %>

            <% else %>

            <%= link_to 'View Past Workout', workout_path(appointment.workout.id) %>

            <% end %>


        <% else %>

        <%= link_to 'Add Workout To This Appointment', new_workout_path(:id => appointment.id ) %></td>

        <% end %>

      
    </td>


    <td>
      <% if appointment.start_at > Time.now %>

        No Results. Workout hasn't happened yet.

      <% else %>

      <%= link_to 'View Results From This Workout', '#' %>

      <% end %>

    <td>
      <%= link_to 'Delete This Appointment', appointment, :confirm => 'Are you sure?', :method => :delete, :class => "deleteMe" %>
    </td>

  </tr>
</tbody>
<% end %>

</table>
 

<% else %>

<p>no clients here</p>

<% end %>
</div>
 







