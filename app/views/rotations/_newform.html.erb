<%= form_for(Rotation.new, html: { :class => "form-horizontal" }, remote: true) do |f| %>

                              <%= hidden_field_tag :rid, @agenda %>

                               <div class="form-group">
                                <%= f.label :amount, :class => "col-md-2 control-label", :id => "amount_lab" %>
                                  <div class="col-md-8">
                                  <%= f.text_field :amount, :class => "form-control place_text", :style => "margin-left: 12px;", :placeholder => "Amount" %>
                                </div>
                              </div>

                              

                              <div class="form-group unvis">
                                <%= f.label :unit, :class => "col-md-2 control-label" %>
                                <div class="col-md-8 ui-select" id="oder" style="max-width:619px; width: 153px; margin-left: 12px !important;">
                             
                                  <% @formlist = ["seconds","minutes","hours","inches","feet","meters","miles","reps"] %>
                             
                                <%= f.select :unit, @formlist.map { |value| [ value, value ] }, {:placeholder => "Unit"}, {:class => "form-control", :style => "padding-left: 12px; width: 107%;"} %>
                                </div>
                              </div>

 

                              <div class="form-group mkvis">
                                  <%= f.label :exwt, "Weight Added", :class => "col-md-2 control-label" %>
                                  <div class="col-md-8">
                                  <%= f.text_field :exwt, :class => "form-control", :style => "margin-left: 12px;", :placeholder => "Pounds" %>
                                </div>
                              </div>

                        

                       

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8 sticker3">
                              <%= f.submit "Add New Set", class: "btn mybtn btn-large btn-primary", style: "margin-left: 42px;" %>
                            </div>
                        </div>
                              <% end %>