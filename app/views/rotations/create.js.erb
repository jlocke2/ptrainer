<% 
@workout = @agenda.workout
@appointment = @workout.appointment
    @id = @appointment.client_id
    @exercises = @workout.agendas
    unless @appointment.present?
      @client = Client.find(@id)
    else
      @meetups = @appointment.meetups
      @attends = []
      @meetups.each do |meetup|
        @name = Client.find(meetup.client_id).name
        @attends << @name
        @last = @attends.last
      end
    end %>

(function() {
$('.editrotate').popover('destroy');
$('.icon-plus').popover('destroy');
$("#new_agendar").html("<%= escape_javascript(render('workouts/addworkout_form')) %>");
$("#listing").html("<%= escape_javascript(render('workouts/newlist')) %>");
$('.table tr:last').remove();
$('#hapit').removeClass('open');
$('.table tr:even').css('background-color', 'rgba(202, 201, 201, 0.34)');
$('.table tr:first').css('background-color', 'rgba(217, 237, 247, 0.66)');
})();